# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /songs                      controllers.SongsController.list()
GET     /                 controllers.SongsController.view()
GET     /songs/:id                  controllers.SongsController.show(id: Int)
GET     /songs/:id/lines            controllers.SongController.lines(id: Int)
POST     /songs/create              controllers.SongController.create()
POST    /songs/update/:id   controllers.SongController.update(id: Int)

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)
